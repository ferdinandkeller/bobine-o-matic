{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "platforms": [
    "linux",
    "macOS",
    "windows"
  ],
  "permissions": [
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "src-python/dist/main/main",
          "sidecar": true,
          "args": [
            "--file-path",
            {
              "validator": "\\S+"
            },
            "--security-coeff",
            {
              "validator": "\\S+"
            },
            "--delivery-duration",
            {
              "validator": "\\S+"
            },
            "--download",
            {
              "validator": "\\S+"
            }
          ]
        }
      ]
    },
    "dialog:default"
  ]
}
